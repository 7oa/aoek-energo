extends core/_template

append sharedVars
    - var activeMenu = '';

block title
    title Вход

block content
    //workarea
    .workarea
        .single-form
            .form-wrapper
                .form-wrapper__body
                    .form-wrapper__ttl.
                        Регистрация в<br>
                        АОЭК Энергосети
                    .reg-menu
                        .reg-menu__item.active.js-tab-link(data-tab="tab1") Физическое лицо
                        .reg-menu__item.js-tab-link(data-tab="tab2") ИП
                        .reg-menu__item.js-tab-link(data-tab="tab3") Юридическое лицо
                    .tabs-list
                        .js-tab-item#tab1
                            form.form1.js-form
                                .input-wrapper
                                    .input-line
                                        input.input(type="text" placeholder="Фамилия*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="Имя*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="Отчество*" data-required="Y")
                                    .input-line.input-line_error
                                        input.input(type="text" placeholder="E-mail*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="СНИЛС*" data-required="Y")
                                .buttons-wrapper.buttons-wrapper_reg
                                        input.submit(type="submit" value="Зарегистрироваться")
                        .js-tab-item#tab2
                            form.form1.js-form
                                .input-wrapper
                                    .input-line
                                        input.input(type="text" placeholder="Фамилия*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="Имя*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="Отчество*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="E-mail*" data-required="Y")
                                    .input-line
                                        input.input(type="text" placeholder="ОГРНИП*" data-required="Y")
                                .buttons-wrapper.buttons-wrapper_reg
                                    input.submit(type="submit" value="Зарегистрироваться" disabled)
                        .js-tab-item#tab3
                            form.form1.js-form
                                .input-wrapper
                                    .input-line
                                        input.input(type="text" placeholder="E-mail*")
                                    .input-line
                                        input.input(type="text" placeholder="ОГРН*")
                                    .input-line
                                        input.input(type="text" placeholder="ИНН*")
                                .buttons-wrapper.buttons-wrapper_reg
                                    input.submit(type="submit" value="Зарегистрироваться")
                .form-wrapper__footer
                    span.fill-all Для регистрации заполните все поля

    //end workarea