    .workarea
        //.offer-page
        .offer-page
            //.container-lk
            .container-lk
                //.lk-block
                .lk-block
                    .req-block
                        .req-block__head
                            .req-block__inner
                                a.req-block__back(href="#") Назад
                                .req-block__btn
                                    a.btn-del(href="#")
                                .req-block__ttl.req-block__ttl_offer Оформление заявки
                    //.reg-stage-wrapper
                    .reg-stage-wrapper
                        //.reg-stage
                        .reg-stage
                            .reg-stage__item.reg-stage__item_check Заявитель
